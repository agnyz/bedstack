{
  "name": "bedstack",
  "title": "Bedstack",
  "version": "",
  "description": "RealWorld example app for Bun + ElysiaJS + Drizzle, the stack you don't want to sleep on",
  "module": "src/main.ts",
  "type": "module",
  "scripts": {
    "start": "bun run src/main.ts",
    "dev": "bun run --watch src/main.ts",
    "build": "./scripts/build.sh",
    "preview": "./server",
    "test:api": "cross-env APIURL=http://localhost:3000/api ./scripts/api-tests/run-api-tests.sh",
    "test:unit": "bun test",
    "test": "bun test:api && bun test:unit",
    "typecheck": "tsc --noEmit",
    "fix": "biome check --fix",
    "check": "biome check",
    "check:errors": "biome check --diagnostic-level=error",
    "docs": "vitepress dev docs",
    "docs:build": "vitepress build docs",
    "docs:preview": "vitepress preview docs",
    "db": "./scripts/create-start-container-with-env.sh",
    "db:generate": "drizzle-kit generate",
    "db:migrate": "drizzle-kit migrate",
    "db:push": "drizzle-kit push",
    "db:seed": "bun drizzle/seed.ts",
    "db:studio": "drizzle-kit studio",
    "db:reset": "bun drizzle/reset.ts"
  },
  "dependencies": {
    "@elysiajs/bearer": "^1.3.0",
    "@elysiajs/jwt": "^1.3.1",
    "@elysiajs/swagger": "^1.3.0",
    "@sinclair/typebox": "0.34.34",
    "drizzle-orm": "^0.44.2",
    "elysia": "^1.3.4",
    "http-status-codes": "^2.3.0",
    "jose": "^6.0.9",
    "postgres": "^3.4.5",
    "radashi": "^12.5.1"
  },
  "devDependencies": {
    "@biomejs/biome": "^1.9.4",
    "@types/node": "^24.0.3",
    "bun-types": "latest",
    "cross-env": "^7.0.3",
    "drizzle-kit": "^0.31.0",
    "drizzle-seed": "^0.3.1",
    "pg": "^8.13.3",
    "typescript": "^5.8.3",
    "vitepress": "^1.6.3"
  },
  "trustedDependencies": ["@biomejs/biome"],
  "overrides": {
    "@sinclair/typebox": "0.34.34"
  }
}
